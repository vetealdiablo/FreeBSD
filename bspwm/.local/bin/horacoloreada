#!/bin/sh

# Definir los colores de texto y fondo
COLOR_TEXT="#181818"
COLOR_BG="#7CAFC2"

# Verificar si la terminal soporta secuencias de color
if [ -t 1 ]; then
    # Si la terminal es interactiva, usamos los códigos de color
    COL_TEXT="^c$COLOR_TEXT^"
    COL_BG="^b$COLOR_BG^"
else
    # Si la terminal no soporta colores, usa los colores predeterminados
    COL_TEXT=""
    COL_BG=""
fi

# Obtener la hora y fecha en el formato deseado
TIME=$(date '+%a, %I:%M %p')

# Símbolo o icono a mostrar (esto dependerá del entorno o si tienes un conjunto de iconos Unicode)
SYMBOL="󱑆"

# Imprimir la información con colores si se soportan
printf "%s%s %s %s^d\n" "$COL_TEXT" "$COL_BG" "$SYMBOL" "$TIME"
